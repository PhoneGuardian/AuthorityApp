<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="home_text_base">
        <item name="android:fontFamily" >sans-serif</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_base">
        <item name="android:fontFamily" >sans-serif</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
    </style>

    <style name="home_button_rounded_overlay_tall" parent="button_base">
        <item name="android:minHeight">@dimen/button_height_tall</item>
        <item name="android:maxHeight">@dimen/button_height_tall</item>
        <item name="android:minWidth">300dp</item>
        <item name="android:height">@dimen/button_height_tall</item>
        <item name="android:background">@drawable/btn_selector_oval_overlay</item>
        <item name="android:drawablePadding">-65sp</item>
        <item name="android:paddingLeft">65sp</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        />
    </style>

    <style name="button_rounded_transparent_normal" parent="button_base">
        <item name="android:height">@dimen/button_height_normal</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@drawable/btn_selector_oval_transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>